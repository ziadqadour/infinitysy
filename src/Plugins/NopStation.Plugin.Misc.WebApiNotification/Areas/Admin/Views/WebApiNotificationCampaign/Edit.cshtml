@model WebApiNotificationCampaignModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.NopStation.WebApiNotification.PushNotificationCampaigns.EditDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("WebApiNotificationCampaigns");
}

<form asp-controller="WebApiNotificationCampaign" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.WebApiNotification.PushNotificationCampaigns.EditDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.NopStation.WebApiNotification.PushNotificationCampaigns.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <button type="button" class="btn bg-olive" data-toggle="modal" data-target="#copycampaign-window">
                <i class="fa fa-clone"></i>
                @T("Admin.NopStation.WebApiNotification.PushNotificationCampaigns.CopyCampaign")
            </button>
            <span id="campaign-delete" class="btn bg-red">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="campaign-delete" />

@*copy campaign form*@
<div id="copycampaign-window" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="copycampaign-window-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="copycampaign-window-title">@T("Admin.NopStation.WebApiNotification.PushNotificationCampaigns.Copy")</h4>
            </div>
            <form asp-controller="WebApiNotificationCampaign" asp-action="CopyCampaign" method="post">
                <div class="form-horizontal">
                    <div class="modal-body">
                        <input asp-for="CopyPushNotificationCampaignModel.Id" type="hidden" />
                        <div class="form-group row">
                            <div class="col-md-4">
                                <nop-label asp-for="CopyPushNotificationCampaignModel.Name" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="CopyPushNotificationCampaignModel.Name" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <nop-label asp-for="CopyPushNotificationCampaignModel.SendingWillStartOnUtc" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="CopyPushNotificationCampaignModel.SendingWillStartOnUtc" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            @T("Admin.NopStation.WebApiNotification.PushNotificationCampaigns.Copy")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>